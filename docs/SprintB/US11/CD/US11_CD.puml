@startuml
skinparam classAttributeIconSize 0

class User {
  - String name
  - String email
  - String pwd
}

class Employee {
  +Employee(name,email,pwd,role)

  +isRole(roleId)
}

class Role {
  -String id
  -String description

  +Role(id,description)
}

class Company {
  -String designation
  +Company(designation)

  +getEmployeesByRoleId(roleId)
}

class ListEmployeeController {
  +getRoles()
  +getEmployeesByRoleId(roleId)
}

class ListEmployeeUI {}

ListEmployeeUI ..> ListEmployeeController
ListEmployeeController ..> Employee
ListEmployeeController ..> Company
Employee "*" --> "1" Role : has
Company "1" --> "*" Employee : employees

User <|-- Employee 

@enduml
